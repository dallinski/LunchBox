<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/addLunchScrollView" >
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:id="@+id/LinearLayout1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/plain"
	    android:orientation="vertical"
	    tools:context=".AddLunch" >
	
	    <RelativeLayout
	        android:id="@+id/email_field"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp" >
	
	        <TextView
	            android:id="@+id/email_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingLeft="20dp"
	            android:typeface="serif"
	            android:textColor="#800000"
	            android:text="Your Email" />
	        
	        <EditText
	            android:id="@+id/email_editText"
	            android:layout_width="250dp"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/email_text"
	            android:ems="10"
	            android:textSize="14sp"
	            android:singleLine="true"
	            android:layout_centerInParent="true"
	            android:ellipsize="start"
	            android:gravity="center_horizontal"
	            android:background="@drawable/edittext_rounded_corners"
	            android:inputType="textEmailAddress"
	            android:hint="cosmo@byu.edu"
	            android:textColorHint="#CCCCCC" >
	
	            <requestFocus />
	        </EditText>
	
	    </RelativeLayout>
	
	    <RelativeLayout
	        android:id="@+id/menu_field"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingBottom="10dp" >
	        
	        <TextView
	            android:id="@+id/menu_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingLeft="20dp"
	            android:typeface="serif"
	            android:textColor="#800000"
	            android:text="The Menu" />
	        
	        <EditText
	            android:id="@+id/menu_editText"
	            android:layout_width="250dp"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/menu_text"
	            android:ems="10"
	            android:textSize="14sp"
	            android:singleLine="true"
	            android:layout_centerInParent="true"
	            android:ellipsize="start"
	            android:gravity="center_horizontal"
	            android:background="@drawable/edittext_rounded_corners"
	            android:hint="Pizza &amp; Rootbeer"
	            android:textColorHint="#CCCCCC" >
	
	        </EditText>
	
	    </RelativeLayout>
	
	    <RelativeLayout
	        android:id="@+id/dateandtime_field"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingBottom="10dp" >
	            
	        <TextView
	            android:id="@+id/dateandtime_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingLeft="20dp"
	            android:typeface="serif"
	            android:textColor="#800000"
	            android:text="Date &amp; Time" />
	        
	        <Button
	            android:id="@+id/dateandtime_button"
	            android:layout_width="250dp"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/dateandtime_text"
	            android:ems="10"
	            android:textSize="14sp"
	            android:singleLine="true"
	            android:layout_centerInParent="true"
	            android:ellipsize="start"
	            android:gravity="center_horizontal"
	            android:background="@drawable/edittext_rounded_corners"
	            android:hint="Feb 7, 2013, 8:58 PM"
	            android:textColorHint="#CCCCCC"
	            android:onClick="showBothPickers" >
	            
	        </Button>
	
	    </RelativeLayout>
	
	    <RelativeLayout
	        android:id="@+id/location_field"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingBottom="10dp" >
	        
	        <TextView
	            android:id="@+id/location_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingLeft="20dp"
	            android:typeface="serif"
	            android:textColor="#800000"
	            android:text="Location" />
	        
	        <EditText
	            android:id="@+id/location_editText"
	            android:layout_width="250dp"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/location_text"
	            android:ems="10"
	            android:textSize="14sp"
	            android:singleLine="true"
	            android:layout_centerInParent="true"
	            android:ellipsize="start"
	            android:gravity="center_horizontal"
	            android:background="@drawable/edittext_rounded_corners"
	            android:hint="1190 Talmage Bldg"
	            android:textColorHint="#CCCCCC" >
	
	        </EditText>
	
	    </RelativeLayout>
	
	    <RelativeLayout
	        android:id="@+id/eventname_field"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingBottom="10dp" >
	        
	        <TextView
	            android:id="@+id/eventname_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingLeft="20dp"
	            android:typeface="serif"
	            android:textColor="#800000"
	            android:text="Event Name" />
	        
	        <EditText
	            android:id="@+id/eventname_editText"
	            android:layout_width="250dp"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/eventname_text"
	            android:ems="10"
	            android:textSize="14sp"
	            android:singleLine="true"
	            android:layout_centerInParent="true"
	            android:ellipsize="start"
	            android:gravity="center_horizontal"
	            android:background="@drawable/edittext_rounded_corners"
	            android:hint="ACM Club meeting"
	            android:textColorHint="#CCCCCC" >
	
	        </EditText>
	
	    </RelativeLayout>
	
	    <RelativeLayout
	        android:id="@+id/thecatch_field"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingBottom="10dp" >
	        
	        <TextView
	            android:id="@+id/thecatch_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingLeft="20dp"
	            android:typeface="serif"
	            android:textColor="#800000"
	            android:text="What's the catch?" />
	        
	        <EditText
	            android:id="@+id/thecatch_editText"
	            android:layout_width="250dp"
	            android:layout_height="150dp"
	            android:layout_below="@+id/thecatch_text"
	            android:ems="10"
	            android:textSize="14sp"
	            android:layout_centerInParent="true"
	            android:ellipsize="start"
	            android:gravity="center_horizontal"
	            android:background="@drawable/edittext_rounded_corners"
	            android:hint="What do you have to do for the food?"
	            android:textColorHint="#CCCCCC" >
	
	        </EditText>
	
	    </RelativeLayout>
	
	    <Button
	        android:id="@+id/preview_button"
	        android:layout_width="150dp"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:text="Preview"
	        android:onClick="preview" />
	
	</LinearLayout>
    
</ScrollView>

